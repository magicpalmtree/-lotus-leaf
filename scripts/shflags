# A script that downloads shflags if it is not present and executes it.

#!/bin/bash

set -e
set -o posix

if [ ! -f "$DIR/shflags-real" ]; then
  echo -e "\e[1;45mDownloading shflags...\e[0m"
  wget https://github.com/kward/shflags/raw/master/lib/shflags -O $DIR/shflags-real
fi

set +e
source "$DIR/shflags-real"
